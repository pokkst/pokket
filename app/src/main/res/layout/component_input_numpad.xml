<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/input_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="1"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/input_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="2"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/input_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="3"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/input_4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="4"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/input_5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="5"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/input_6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="6"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/input_7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="7"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/input_8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="8"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/input_9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="9"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/decimal_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="."
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/input_0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:shadowColor="@android:color/transparent"
                android:stateListAnimator="@null"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp"/>

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_regular_blue"
                android:scaleType="centerInside"
                android:shadowColor="@android:color/transparent"
                android:src="@drawable/deletetoleft"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>