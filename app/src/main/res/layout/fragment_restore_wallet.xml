<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".ui.main.fragment.setup.RestoreWalletFragment">
    <include
        layout="@layout/fragment_intro_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/recover_wallet_edit_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/white_trans"
            android:gravity="top"
            android:imeOptions="actionDone"
            android:inputType="textVisiblePassword|textMultiLine"
            android:lines="5"
            android:hint="@string/recovery_phrase"
            android:padding="20dp"
            android:scrollHorizontally="false"
            android:textColor="@color/purple_dark"
            android:textColorHint="@color/purple_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bip39_passphrase_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recover_wallet_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/white_trans"
            android:gravity="top"
            android:imeOptions="actionDone"
            android:inputType="textVisiblePassword|textMultiLine"
            android:lines="1"
            android:singleLine="true"
            android:hint="@string/recovery_phrase_extension"
            android:padding="20dp"
            android:scrollHorizontally="false"
            android:textColor="@color/purple_dark"
            android:textColorHint="@color/purple_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/recover_wallet_edit_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:text="@string/continue_button"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/purple"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/continue_button"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:visibility="gone"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/light_gray"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/bip39_passphrase_edit_text"
            android:layout_centerHorizontal="true">
            <CheckBox
                android:id="@+id/multsig_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restore_multisig_wallet"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>